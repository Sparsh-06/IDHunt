{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "target": "es2015",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/types/app/sign-in/page.tsx", ".next/types/app/sign-in/[[...sign-in]]/page.tsx", ".next/types/app/sign-up/[[...sign-up]]/page.tsx", "src/app/api/sendMessage.js", "src/lib/connectToDatabase.js"],
  "exclude": ["node_modules"]
}
